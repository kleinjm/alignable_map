#business-modal.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} &times;
        .text-center
          %h3.modal-title Sorry, could not load business data
      .modal-body
        .row
          .col-md-4.col-md-offset-4
            %img.imp-responsive.logo
        %br
        %p.description
        .address1
        .address2
        %p.phone
      .modal-footer
        %button.btn.btn-primary{"data-dismiss" => "modal", :type => "button"} Okay

%hr.invisible
#map
%hr.invisible
%table.table.table-hover
  %thead
    %tr
      %th Name
      %th Address
  %tbody
    - @businesses.each do |business|
      %tr
        %td= link_to business.name, "#undefined", class: "business-link", 'data-id': business.id
        %td= link_to business.full_address, "#undefined", class: "business-link", 'data-id': business.id

= render "build_map_call"